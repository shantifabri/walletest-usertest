<h1>Transaction <%= @transaction.id %> </h1>

<div>
  <h2>Transaction installments </h2>

  <table>
  <thead>
    <tr>
      <th>Posición cuota</th>
      <th>Monto cuota</th>
      <th>Fecha liquidación</th>
      <th>Status</th>
      <th>Acción</th>
    </tr>
  </thead>

  <tbody>
    <% @installments.each do |ins| %>
      <tr>
        <td><%= ins.place %>/<%= ins.total_places %></td>
        <td><%= ins.unit_amount %></td>
        <td><%= ins.liq_date %></td>
        <% if !ins.liq_status %>
            <td>Por liquidar</td>
            <td><%= link_to('Liquidar cuota', liquid_path(id: ins.id), method: :post) %></td>
        <% else %>
            <td>Liquidada</td>
            <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to('Volver a cuenta', user_credit_account_path(@account.user, @account)) %>
